@model WebAppTodo.Models.Todo.AddTodoViewModel

@{
    ViewData["Title"] = "Add a Todo";
}

<h2>@ViewData["Title"]</h2>

<div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Add" method="post">   
                <hr />
                <div class="form-group">
                    <label asp-for="Text"></label> <input asp-for="Text" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateDue"></label> <input asp-for="DateDue" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Labels"></label> <input asp-for="Labels" class="form-control" />
                </div>
                <button type="submit" class="btn btn-default">Add</button>
            </form>
        </div>
    </div>
</div>
<div>
    <br/><br/><a asp-action="Index">Go back</a>
</div>